<% if (errors) { %>
    <ul class="notice">
   <% errors.forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<h1>Add New Classification</h1>
<form action="/inv/add-classification" method="post">
    <label for="classifcationList">Classification</label><br>
    <%- classifcationSelect %>

    <label for="invMake">Vehicle Name</label>
    <input type="text" pattern="^[a-zA-Z0-9]+$" required minlength="3" value="Min of 3 characters"<% if(locals.inv_make) { %>value="<%= locals.inv_make %>"<% } %>>

    <label for="invModel">Vehicle Model</label>
    <input type="text"pattern="^[a-zA-Z0-9]+$" required minlength="3" value="Min of 3 characters"<% if(locals.inv_model) { %> value = "<%= locals.inv_model %>"<% } %>>
    
    <buttom type="submit" name="submit">Update Classification</button>
</form>
