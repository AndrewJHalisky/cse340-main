<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div class="account">
        <% if (locals.loggedin = 0) { %>
        <a id="signIn" title="Click to log in" href="/account/login">My Account</a>
        <% } else { %>
            <a href="/account"><%= locals.account_firstname %></a>
            <a href="/account/login" id="logout" value="logout" onclick="change(event)">Logout</a>
        <% } %>
    </div>
</header>